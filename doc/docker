docker run \
--name postgresql \
--restart=always \
-d \
-e TZ=Asia/Shanghai \
-e POSTGRES_PASSWORD=change-this \
-e PGDATA=/var/lib/postgresql/data/pgdata \
-v change-this:/var/lib/postgresql/data \
--network craft-net \
-p change-this:5432 \
postgres

docker run \
--name bot \
--restart=always \
-e TZ=Asia/Shanghai \
-v change-this:/data \
-d \
node /bin/bash \
-c "cd /data && npm run prod"

docker network create craft-net